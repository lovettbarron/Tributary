mixin miniFeed(feed)
	.row-fluid
		.span12
			mixin subscribe()
			h3= feed.title
			- each item in feed.updates
				case item.type
					when 'profile'
						.feedItem
							.row-fluid
								.span2
									img(src='http://placehold.it/100x100&text=#{item.type}')
								.span10
									.time.pull-right #{item.time}
									h4: a(href='#publicProfile')= item.actor
									p= item.title
									.row-fluid.onHover
										.span8
										.span2
											i.icon-share
											|  Share
										.span2
											i.icon-remove
											|  Report
					when 'group'
						.feedItem
							.row-fluid
								.span2
									img(src='http://placehold.it/100x100&text=#{item.type}')
								.span10
									.time.pull-right #{item.time}
									h4: a(href='#groupDetail')= item.title
									p= item.desc
									.row-fluid.onHover
										.span8
										.span2
											i.icon-share
											|  Share
										.span2
											i.icon-remove
											|  Report
					when 'event'
						.feedItem
							.row-fluid
								.span2
									img(src='http://placehold.it/100x100&text=#{item.type}')
								.span10
									.time.pull-right #{item.time}
									h4: a(href='#calendar')= item.title
									p= item.desc
									.row-fluid.onHover
										.span6
										.span2
											i.icon-plus-sign
											|  Register
										.span2
											i.icon-share
											|  Share
										.span2
											i.icon-remove
											|  Report
					when 'news'
						.feedItem
							.row-fluid
								.span2
									img(src='http://placehold.it/100x100&text=#{item.type}')
								.span10
									.time.pull-right #{item.time}
									h4: a(href='#news')= item.title
									h6: a(href='#publicProfile')= item.actor
									p.ipsum(length='130')
									.row-fluid.onHover
										.span6
										.span2
											i.icon-share-alt
											|  Leave comment
										.span2
											i.icon-share
											|  Share
										.span2
											i.icon-remove
											|  Report
					when 'doc'
						.feedItem
							.row-fluid
								.span2
									img(src='http://placehold.it/100x100&text=#{item.type}')
								.span10
									.time.pull-right #{item.time}
									h4: a(href='##{item.link}')= item.title
									h6
										a(href='#publicProfile') Bob
										|  Updated: 
									p "Pour-over ad typewriter 8-bit, jean shorts cardigan godard. Swag wolf occaecat, polaroid gluten-free sint nostrud before they quit"
									.row-fluid.onHover
										.span4
										.span2
											i.icon-plus-sign
											|  Bookmark
										.span2
											i.icon-pencil
											|  Edit
										.span2
											i.icon-share
											|  Share
										.span2
											i.icon-remove
											|  Report
