mixin comment()
	.comment
		btn.btn.btn-mini(type='Comment') Comment
		.row-fluid.commentHide
			.span6
				.fieldset
					label Leave a comment!
					textarea.input-xlarge(rows='3')
				hr
				btn.btn.btn-primary.pull-left(type='submit') Post

mixin todo(items)
	.todo
		.row-fluid
			.span9
				h3 Todo list
			.span3
				.btn-group.pull-right
					btn.btn.btn-mini +
					btn.btn.btn-mini.dd-toggle(data-toggle='dropdown', data-target='#'): &#9660;
					ul.dropdown-menu
						li: a Create a todo
						li: a Create a Deadline
	-each item in items
		.row-fluid
			.span1: input(type='checkbox')
			.span11= item

mixin subscribe()
	.subscribe
		btn.btn.btn-mini(type='Subscribe') Subscribe

