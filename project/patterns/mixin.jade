mixin linkList(list)
	.link-list
		h4= list.title
		ul
			-each item in list.items
				li 
					a(href=item.address)= item.title
					-if (list.showOpts == true)
						a.btn.btn-mini.dd-toggle(data-toggle='dropdown', data-target='#'): &#9660;
						ul.dropdown-menu
							li: a View
							li: a Unsubscribe

