include ../../patterns/mixin
- var Stories =[ {title: 'SickKids in the news!', icon: 'user'}, {title: 'Testing this out', icon: 'wrench'} , {title: 'tons of cars', icon: 'folder-open'}, {title: 'test', icon: 'pencil'}];
.row
	.span8
		.row
			.span8
				.well
					h2: a(href='#news') What's Happening?
					.row
						.span4
							p: img(src='http://placehold.it/300x100')
							h4: a(href='#news') This is the feature news story
							p.ipsum(length='500')
						.span4
							-each story in Stories
								.row
									.span4
										h4: a= story.title
										p.ipsum(length='100')
						a.pull-right(href='#news') Read the daily news »
		.row
			.span4
				.well
					h2: a(href='#subscription')  My Feeds
					-each story in Stories
						.news-item
							h4
								i(class='icon-' + story.icon)
								a(href='#subscription')  #{story.title}
							p.ipsum(length='100')
					a.pull-right(href='#subscription') View all my subscriptions »
				.well
					h2 Quick Poll
					mixin radio({question: 'What do you think of the new Intranet?', items:['I think it\'s awesome', 'It\'s the best intranet I\'ve ever seen','I think it\'s great but we can do better!']})
					a.pull-right(href='#poll') View poll results »
					btn.btn.btn-primary(type='button') Submit
			.span4
				.well
					mixin dailyAgenda(['This item is on the calendar today', 'This is another item that needs to be done today', 'Project deadline is today'])
				.well
					mixin twitter()
	.span2
		include links