			.span6
				mixin calendar()
				h4 Filter
				.row-fluid
					.span1(style='color: red') &#9632;
					.span5 Research
				.row-fluid
					.span1(style='color: green') &#9632;
					.span5 SickKids
				.row-fluid
					.span1(style='color: black') &#9632;
					.span5 Learning
				.row-fluid
					.span1(style='color: blue') &#9632;
					.span5 Care
		hr
		mixin todo()