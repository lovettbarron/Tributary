include ../../patterns/mixin.jade
#editLinks
	- var links = {title: 'My Links', edit: true, items: [{title: 'e-HR for Staff', address: '#'}, {title: 'Staff Absence Reporting System (STARS)', address: '#'},{title: 'Occupational Health & Safety Services', address: '#'}, {title: 'Benefits Information', address: '#'}, {title: 'Information Services', nodelete: true,address: '#'},{title: 'Financial Services', nodelete: true,address: '#'},{title: 'Shop & Eat at SickKids', nodelete: true,address: '#'}]}

	mixin linkList(links)

	-var tools = [{title: 'KidTrac', selected: true, address: '#'}, {title: 'iProject', selected: true, address: '#'},{title: 'Ideas Innovation Tool', address: '#'}, {title: 'Canadian Medical Directory', address: '#'}]

	.link-list
		a.btn.btn-mini.pull-right.editLink Edit

		h4 My Tools
		.row-fluid.MyTools
			| Add tool from list
			select.select.span12
				-each item in tools
					option= item.title
			a.btn.btn-mini.addTools Add tool
		ul.selectedTools
			-each item in tools
				-if (item.selected)
					li 
						a(href=item.address)= item.title
						mixin notification({title:item.title + ' deleted', desc: 'Click here to undo' })

	- var groups = {title: 'My Active Groups', items: [{title: 'Critical Care Medicine Program (CCMP)',nodelete: true, address: '#'}, {title: 'IV Pump Project',nodelete: true, address: '#'},{title: 'Cardiac Connections',nodelete: true, address: '#'},{title: 'Centre for Nursing',nodelete: true, address: '#'},{title: 'Community Care Access Centre',nodelete: true, address: '#'},{title: 'MDCentre',nodelete: true, address: '#'},{title:"All Groups Â»", address:"/groups"}]}

	mixin linkList(groups)



