include ../../patterns/mixin
- var Stories =[ {title: 'SickKids in the news!', address: 'test'}, {title: 'Testing it out', address: 'test'} , {title: 'Testing testing', address: 'test'}, {title: 'test', address: 'test'}, {title: 'test', address: 'test'}, {title: 'test', address: 'test'}, {title: 'test', address: 'test'}, {title: 'test', address: 'test'}, {title: 'test', address: 'test'}, {title: 'test', address: 'test'}, {title: 'test', address: 'test'}, {title: 'test', address: 'test'}];

.row
	.span8
		.row-fluid
			.span6.dropdown
				h3.pull-left Filter: 
				a.btn.dd-toggle(data-toggle='dropdown', data-target='#') Show all &#9660;
				ul.dropdown-menu
					li: a Show all
					li: a Unread only
					li: a Favorited only
					li: a My groups only
						
			.span6
				.btn-group.pull-right
					.btn.btn: i.icon-list
					.btn.btn: i.i.icon-tasks
				.btn-group.pull-right
					.btn.btn: i.icon-arrow-up
					.btn.btn: i.i.icon-arrow-down
		hr
		.row-fluid
			.span1: img(src='http://placehold.it/100x100')
			.span9
				.row-fluid
					.span12: h4 This is an expanded subscription item
					p.ipsum
				.row-fluid
					.span6: h6 from: Path/To/Original
					.span6: h6 Last updated 12 minutes ago
			.span2.btn-group.dropdown
				btn.btn.btn-mini(type='button') close
				btn.btn.btn-mini.dd-toggle(data-toggle='dropdown', data-target='#'): &#9660;
				ul.dropdown-menu
					li: a Edit
					li: a Share
					li: a Hide
					li: a Report
		hr
		-each story in Stories
			.row-fluid
				.span1: img(src='http://placehold.it/100x100')
				.span9
					.row-fluid
						.span12: h4= story.title
					.row-fluid
						.span6: h6 from: Path/To/Original
						.span6: h6 Last updated 12 minutes ago
				.span2.btn-group.dropdown
					btn.btn.btn-mini(type='button') Open
					btn.btn.btn-mini.dd-toggle(data-toggle='dropdown', data-target='#'): &#9660;
					ul.dropdown-menu
						li: a Edit
						li: a Share
						li: a Hide
						li: a Report
	.span3
		h4 Subscriptions

		- var groups = {title: "Groups", items: [{title: 'Feed Name (4)', address: '#'},{title: 'Feed Name (4)', address: '#'},{title: 'Feed Name (4)', address: '#'},{title: 'Feed Name (4)', address: '#'}]}

		mixin linkList(groups)

		- var people = {title: "People", items: [{title: 'Feed Name (4)', address: '#'},{title: 'Feed Name (4)', address: '#'},{title: 'Feed Name (4)', address: '#'},{title: 'Feed Name (4)', address: '#'}]}

		mixin linkList(people)
